{
  "flex-layout.row#deals": {
    "children": [
      "flex-layout.col#deals1",
      "flex-layout.col#deals2",
      "flex-layout.col#deals3",
      "flex-layout.col#deals4"
    ],
    "props": {
      "blockClass": "deals",
      "marginBottom": 9,
      "marginTop": 9,
      "paddingBottom": 8,
      "paddingTop": 8,
      "preventHorizontalStretch": true,
      "horizontalAlign": "between" 
    }
  },

  "flex-layout.col#deals1": {
    "props": {
      "blockClass": "row-with-gap-10",
      "verticalAlign": "middle"
    }, 
    "children": [
      "image#deal1",
      "rich-text#deal1"
    ]
  },
  "image#deal1": {
    "props": {
      "src": "assets/img/cartao.svg",
      "maxHeight": "24px"
    }
  },
  "rich-text#deal1": {
    "props": {
      "text": "Parcelamento **em<br> até 10x**",
      "blockClass": "deals"
    }
  },
  "flex-layout.col#deals2": {
    "props": {
      "blockClass": "row-with-gap-10",
      "verticalAlign": "middle"
    }, 
    "children": [
      "image#deal2",
      "rich-text#deal2"
    ]
  },
  "image#deal2": {
    "props": {
      "src": "assets/img/caminhao.svg",
      "maxHeight": "24px"
    }
  },
  "rich-text#deal2": {
    "props": {
      "text": "**Frete Grátis** nas<br> compras acima de R$899",
      "blockClass": "deals"
    }
  },
  "flex-layout.col#deals3": {
    "props": {
      "blockClass": "row-with-gap-10",
      "verticalAlign": "middle"
    }, 
    "children": [
      "image#deal3",
      "rich-text#deal3"
    ]
  },
  "image#deal3": {
    "props": {
      "src": "assets/img/presente.svg",
      "maxHeight": "24px"
    }
  },
  "rich-text#deal3": {
    "props": {
      "text": "Embale para<br> **presente**",
      "blockClass": "deals"
    }
  },
  "flex-layout.col#deals4": {
    "props": {
      "blockClass": "row-with-gap-10",
      "verticalAlign": "middle"
    }, 
    "children": [
      "image#deal4",
      "rich-text#deal4"
    ]
  },
  "image#deal4": {
    "props": {
      "src": "assets/img/raio.svg",
      "maxHeight": "24px"
    }
  },
  "rich-text#deal4": {
    "props": {
      "text": "**Entrega Expressa** <br> para Belo Horizonte",
      "blockClass": "deals"
    }
  }
}
